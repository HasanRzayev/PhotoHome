
@{
    Layout=null;
}


@model LoginViewModel
<div class="login-form-bd">
  <div class="form-wrapper">
    <div class="form-container">
      <h1> Please Login</h1>
    <form method="post" asp-action="Authenticate" asp-controller="User">
         <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" class="form-control" />
        <div class="form-control">
          <input asp-for="Email"  type="text" required>
          <label> Email</label>
        </div>

        <div class="form-control">
          <input  asp-for="Password"type="password" required>
          <label> Password</label>
        </div>
        <button class="login-btn">Login</button>
        <p class="text">Don't have an account? <a href="register.html"> Register</a></p>
      </form>
    </div>
  </div>
</div>