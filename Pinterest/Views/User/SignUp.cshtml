@model SignupViewModel

<div class="container-fluid registration-page p-0" id="signup-page">
	<div class="container-fluid registration-page-bg">
		<div class="registration">
			<h1>Signup</h1>

			<form method="post" asp-action="SignUp" asp-controller="User">
				<div class="registration-field">
					<input asp-for="FirstName" type="text" required>
					<label>First name</label>
				</div>
				<span asp-validation-for="FirstName"></span>

				<div class="registration-field">
					<input asp-for="LastName" type="text" required>
					<label>Last name</label>
				</div>
				<span asp-validation-for="LastName"></span>

				<div class="registration-field">
					<input asp-for="Email" type="text" required>
					<label>Email</label>
				</div>
				<span asp-validation-for="Email"></span>

				<div class="registration-field">
					<input asp-for="Password" type="password" required>
					<label>Password</label>
				</div>
				<span asp-validation-for="Password"></span>

				<a href="#" id="forgot">Forgot Password?</a>

				<input type="submit" value="Signup">
				<div id="link">
					Already have an account? <a asp-action="Login" asp-controller="User">Login</a>
				</div>
			</form>
		</div>
	</div>
</div>
