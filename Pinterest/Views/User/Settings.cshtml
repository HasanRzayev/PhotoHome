<div class="container-fluid p-4">
	<div class="row justify-content-center">
		<div class="col-xl-8 col-lg-12">
			<div class="row">
				<div class="col-xl-12 col-lg-12">
					<h1>Profile</h1>
					<h6 class="mb-4">People visiting your profile will see the following info</h6>

					<span>@*Exception*@</span>

					<form action="#" method="post" class="probootstrap-form mb-5">
						<div class="row">
							<div class="col-md-12">
								<div class="form-group">
									<div class="mx-auto" id="user-image">
										<a href="#">A</a>
									</div>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-md-6">
								<div class="form-group">
									<label for="fname">First Name</label>
									<input type="text" class="form-control" id="fname" name="fname">
								</div>
							</div>
							<div class="col-md-6">
								<div class="form-group">
									<label for="lname">Last Name</label>
									<input type="text" class="form-control" id="lname" name="lname">
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-md-12">
								<div class="form-group">
									<label for="email">Email</label>
									<input type="text" class="form-control" id="email" name="email">
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-md-12">
								<div class="form-group">
									<label for="username">Username</label>
									<input type="text" class="form-control" id="username" name="username">
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-md-12">
								<div class="form-group">
									<label for="about">About</label>
									<textarea cols="30" rows="10" class="form-control" id="about" name="about"></textarea>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-md-6">
								<input type="submit" class="btn btn-primary" id="submit" name="submit" value="Save">
							</div>
							<div class="col-md-6">
								<input type="submit" class="btn btn-primary" id="submit" name="submit" value="Reset">
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
