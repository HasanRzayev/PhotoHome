@model List<Tag>

@{
	int count = 1;
}

<div class="flex flex-row bg-white py-4 px-32 border-b border-gray-300 overflow-scroll" style="width: 100%">

	<div class="flex flex-col" style="width: 100%">
		<div class="flex flex-col justify-center my-3" style="width: 100%">
			<h4 class="h4">Tags</h4>

			<a href=@Url.Action("AddTag", "Tag") class="btn-shadow mt-6" style="display:flex; align-items:center; justify-content:center; width: 60px;">Add</a>
		</div>

		<div class="card col-span-2 xl:col-span-1">
			<table class="table-auto w-full text-center">
				<thead>
					<tr>
						<th class="px-4 py-2 border-r"></th>
						<th class="px-4 py-2 border-r">Id</th>
						<th class="px-4 py-2 border-r">Name</th>
						<th class="px-4 py-2 border-r">Edit</th>
						<th class="px-4 py-2">Delete</th>
					</tr>
				</thead>

				<tbody class="text-gray-600">
					@foreach (var tag in Model)
					{
						<tr>
							<td class="border border-l-0 border-b-0 px-4 py-2">
								@count
							</td>

							<td class="border border-l-0 border-b-0 px-4 py-2">
								@tag.Id
							</td>

							<td class="border border-l-0 border-b-0 px-4 py-2">
								@tag.Name
							</td>

							<td class="border border-l-0 border-b-0 px-4 py-2">
								<a href="@Url.Action("UpdateTag", "Tag" , new {  Id = tag.Id })" class="btn-shadow">Edit</a>
							</td>

							<td class="border border-l-0 border-r-0 border-b-0 px-4 py-2">
								<a href="@Url.Action("DeleteTag", "Tag" , new {  Id = tag.Id })" class="btn-danger btn-shadow">Delete</a>
							</td>
						</tr>
						count++;
					}
				</tbody>
			</table>
		</div>
	</div>
</div>
